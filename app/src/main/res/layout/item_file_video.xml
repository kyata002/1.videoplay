<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ECE8E8"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#00ECE8E8"
        android:id="@+id/rlselect"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp">
                    <ImageView
                        android:id="@+id/imgFile"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_video_demo" />
                </androidx.cardview.widget.CardView>
                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/_140sdp"-->
                <!--                    android:layout_height="@dimen/_80sdp"-->
                <!--                    android:scaleType="fitXY"-->
                <!--                    android:src="@drawable/bg_file"/>-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/bg_time_file"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_time_file" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_8sdp"/>
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:text="hellqewqweqqweqq232"
            android:textColor="#2C2C2C"
            android:textSize="@dimen/_12sdp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtSize"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="#929292"
                android:textSize="@dimen/_8sdp"
                android:text="size"/>
            <TextView
                android:id="@+id/txtTime"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_4sdp"
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="#929292"
                android:maxLines="1"
                android:paddingBottom="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:text="day"/>
            <FrameLayout
                android:id="@+id/bt_more"
                android:layout_width="@dimen/_24sdp"
                android:padding="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_more_1"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>