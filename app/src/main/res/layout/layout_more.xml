<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_unicon"
    android:padding="@dimen/_1sdp"
    android:backgroundTint="#406B6B6B">
    <LinearLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_168sdp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/ic_unicon"
        android:weightSum="4"
        android:padding="@dimen/_6sdp">
        <LinearLayout
            android:layout_marginTop="@dimen/_9sdp"
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share_more"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_share_more"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/share"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                tools:ignore="NestedWeights" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rename_more"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_rename_more"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:text="@string/rename"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/delete_more"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_delete_more"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:text="@string/delete"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/detail_more"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_detail_more"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:text="@string/detail"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                 />



        </LinearLayout>


    </LinearLayout>
</FrameLayout>